# Example environment variables for Donate Local backend
# Copy this file to `.env` and fill in your real values. Do NOT commit your real .env!

# ──────────────
# Server
# ──────────────
PORT=5000
NODE_ENV=development

# ──────────────
# Database
# ──────────────
MONGO_URI=mongodb://mongo:27017/lifeloop

# ──────────────
# Authentication (JWT)
# ──────────────
JWT_SECRET=your_super_secret_key_min_32_chars
JWT_EXPIRES_IN=1d

# ──────────────
# Cloudinary
# ──────────────
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ──────────────
# Client / Socket URLs
# ──────────────
CLIENT_URL=http://localhost:3000

# ──────────────
# Transaction Verification (QR)
# ──────────────
QR_SECRET_KEY=your_qr_secret_key
TRANSACTION_EXPIRY_MINUTES=30

# ──────────────
# Email (Optional)
# ──────────────
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# ──────────────
# Firebase (Optional)
# ──────────────
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_PRIVATE_KEY=your_private_key
FIREBASE_CLIENT_EMAIL=your_client_email

# ──────────────
# Mapbox / Socket (Optional)
# ──────────────
REACT_APP_MAPBOX_TOKEN=your_token_here
REACT_APP_SOCKET_URL=http://localhost:5000
